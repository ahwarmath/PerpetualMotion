<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

	##################
	##### BUTTONS ####
        ##################

        # Quit button
        Button:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quit()

        DPEAButton:  
            id: auto
            color: 0.917, 0.796, 0.380, 1
            text: "Start"
            font_size: 40
            center_x: root.width * 0.5
            y: root.height * 0.60
            background_color: 1, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.auto()

        # Turn on/off gate
        DPEAButton:
            id: gate
            color: .7, 0, .4, 1
            text: "Open Gate"
            font_size: 40
            center_x: root.width * 0.25
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: self.text = root.toggleGate(self.text)

        DPEAButton:
            id: ramp
            color: 0.7, 0, 0.4, 1
            text: "Ramp to Top"
            font_size: 40
            center_x: root.width * 0.5
            y: root.height * 0.30
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleRamp()

        DPEAButton:
            id: staircase
            color: 0.7, 0, 0.4, 1
            text: "Staircase On"
            font_size: 40
            center_x: root.width * 0.75
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: self.text = root.toggleStaircase(self.text)

        DPEAButton:
            id: ramp_reset
            color: 0.7, 0, 0.4, 1
            text: "Reset Ramp"
            font_size: 40
            center_x: root.width * 0.5
            center_y: root.height * 0.50
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.reset_ramp()

	##################
	##### SLIDERS ####
        ##################

        Slider:
            id: rampSpeed
            orientation: 'horizontal'
            min: 1
            max: 20
            value: root.rampSpeed
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.15
            size_hint_x: 7
            on_value: root.setRampSpeed(self.value)

        Slider:
            id: staircaseSpeed
            orientation: 'horizontal'
            min: 1
            max: 2
            value: root.staircaseSpeed
            step: 0.1
            center_x: root.width * 0.6
            y: root.height * 0.05
            size_hint_x: 7
            on_value: root.setStaircaseSpeed(self.value)


        ##################
	##### LABELS #####
        ##################

        Label:
            id: title
            text: 'Perpetual Motion Machine'
            font_size: 55
            bold: True
            center_x: root.width * 0.5
            halign: 'center'
            y: root.height * 0.75
            color: 0.9, 0.9, 0.9, 1

        Label:
            id: rampSpeedLabel
            text: 'Ramp Speed: ' + str(rampSpeed.value)
            font_size: 40
            center_x: root.width * 0.22
            y: root.height * 0.15
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: staircaseSpeedLabel
            text: 'Staircase Speed: ' + str(staircaseSpeed.value)
            font_size: 40
            center_x: root.width * 0.20
            y: root.height * 0.05
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: armControlLabel
            text: 'test'
            font_size: 20
            center_x: root.width * 0.9
            y: root.height * 0.02
            color: 0.8, 0.8, 0.8, 1

